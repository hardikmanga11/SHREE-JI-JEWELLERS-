<script>
const galleryContainer = document.getElementById('galleryContainer');
const storedImages = JSON.parse(localStorage.getItem('jewelryImages')) || [];
storedImages.forEach(src => addImageToGallery(src));

document.getElementById('imageUpload').addEventListener('change', (event) => {
  const files = event.target.files;
  for (let file of files) {
    const reader = new FileReader();
    reader.onload = (e) => {
      addImageToGallery(e.target.result);
      storedImages.push(e.target.result);
      localStorage.setItem('jewelryImages', JSON.stringify(storedImages));
    };
    reader.readAsDataURL(file);
  }
});

function addImageToGallery(src) {
  const img = document.createElement('img');
  img.src = src;
  galleryContainer.appendChild(img);
}

function uploadOwnerImage(num) {
  document.getElementById('ownerUpload' + num).click();
}
function setOwnerImage(event, num) {
  const file = event.target.files[0];
  const reader = new FileReader();
  reader.onload = (e) => {
    document.getElementById('owner' + num).src = e.target.result;
    localStorage.setItem('owner' + num, e.target.result);
  };
  reader.readAsDataURL(file);
}

window.addEventListener('load', () => {
  for (let i=1; i<=2; i++) {
    const imgSrc = localStorage.getItem('owner' + i);
    if (imgSrc) document.getElementById('owner' + i).src = imgSrc;
  }
});

document.getElementById('contactForm').addEventListener('submit', (e) => {
  e.preventDefault();
  alert("Message Sent Successfully! (Demo Mode)");
});
</script>
